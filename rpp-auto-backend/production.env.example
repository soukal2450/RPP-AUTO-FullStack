# APPLICATION SETTINGS
ENVIRONMENT=production
DEBUG=False
PORT=8080
ALLOWED_HOSTS=recessionproofproducts.com,api.recessionproofproducts.com

# DOMAIN CONFIGURATION
DOMAIN=https://recessionproofproducts.com
API_URL=https://api.recessionproofproducts.com
FRONTEND_URL=https://recessionproofproducts.com

# SUPABASE DATABASE
SUPABASE_URL=https://gfhthbmbgoxqqbzxnauv.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key_here

# DATABASE CONNECTION (Pooler - Port 6543 for production)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.gfhthbmbgoxqqbzxnauv.supabase.co:6543/postgres
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# STRIPE PAYMENT (Use LIVE keys for production)
STRIPE_PUBLISHABLE_KEY=pk_live_your_key_here
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# MOTOR DAAS (Vehicle Data API)
MOTOR_DAAS_PUBLIC=your_public_key
MOTOR_DAAS_PRIVATE=your_private_key

# AI & AUTOMATION
AUTO_DEV_KEY=sk_ad_your_key_here
OPENROUTER_API_KEY=sk-or-v1-your_key_here
HUGGING_FACE_KEY=hf_your_key_here

# EMAIL SERVICE
RESEND_API_KEY=re_your_key_here

# GOOGLE SERVICES
GOOGLE_MAPS_KEY=your_google_maps_key_here

# SECURITY
JWT_SECRET=your_jwt_secret_min_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30

# CORS SETTINGS
CORS_ORIGINS=https://recessionproofproducts.com,https://api.recessionproofproducts.com

# RATE LIMITING
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# LOGGING
LOG_LEVEL=INFO
LOG_FILE=/var/log/rpp-auto/app.log
