# NPM Configuration for Expo Builds
# This ensures deterministic and reliable builds

# Use legacy peer dependencies resolver to avoid conflicts
legacy-peer-deps=true

# Save exact versions instead of ranges
save-exact=true

# Don't enforce engine versions strictly
engine-strict=false

# Use npm registry
registry=https://registry.npmjs.org/

# Increase timeout for slow networks
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
