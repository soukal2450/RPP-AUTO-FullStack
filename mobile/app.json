{
  "expo": {
    "name": "RPP AUTO",
    "slug": "rpp-auto-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0E1A"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rppauto.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0E1A"
      },
      "package": "com.rppauto.mobile",
      "permissions": ["CAMERA", "ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION", "INTERNET"]
    },
    "plugins": [
      ["expo-camera", {"cameraPermission": "Allow RPP AUTO to access your camera to scan VIN numbers"}],
      ["expo-location", {"locationAlwaysAndWhenInUsePermission": "Allow RPP AUTO to use your location"}]
    ]
  }
}
